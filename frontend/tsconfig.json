{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "node",
            "vite/client"
        ]
    },
    "include": [
        "src",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}